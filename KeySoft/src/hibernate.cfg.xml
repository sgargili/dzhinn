    <property name="hibernate.connection.url">jdbc:mysql://192.168.1.177:3306/softdb</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">Pass4root</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <mapping resource="pojo/Attribute.hbm.xml"/>
    <mapping resource="pojo/Soft.hbm.xml"/>
    <mapping resource="pojo/Value.hbm.xml"/>
    <mapping resource="pojo/ProductType.hbm.xml"/>
