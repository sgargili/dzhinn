<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    
<!--Настройки параметров связи с базой данных-->

    <bean id="sessionFactory"
        class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">

        <property name="dataSource" ref="dataSource"/>

        <property name="mappingResources">
            <list>
                <value>pojo/Attribute.hbm.xml</value>
                <value>pojo/ProductType.hbm.xml</value>
                <value>pojo/Value.hbm.xml</value>
                <value>pojo/Soft.hbm.xml</value>
                <value>pojo/Headphones.hbm.xml</value>
            </list>
        </property>

        <property name="hibernateProperties">
            <value>
            hibernate.dialect=org.hibernate.dialect.MySQLDialect
            hibernate.connection.characterEncoding=UTF-8
            hibernate.current_session_context_class=thread
            hibernate.show_sql=true
            hibernate.format_sql=true
            </value>
        </property>
    </bean>

    <bean id="dataSource"
            class="org.apache.commons.dbcp.BasicDataSource"
            destroy-method="close">

        <property name="driverClassName" value="com.mysql.jdbc.Driver" />

        <property name="url">
            <value>jdbc:mysql://192.168.1.177:3306/softdb?useUnicode=true&amp;characterEncoding=utf-8</value>
        </property>

        <property name="username">
            <value>root</value>
        </property>

        <property name="password">
            <value>Pass4root</value>
        </property>

    </bean>

<!--Настройки параметров связи с базой данных - конец-->


<!--Декларация бинов для DAO-->

    <bean id="SoftDAOTemp" class="dao.impl.SoftDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="AttributeDAOTemp" class="dao.impl.AttributeDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="ProductTypeDAOTemp" class="dao.impl.ProductTypeDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="ValueDAOTemp" class="dao.impl.ValueDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="HeadphonesDAOTemp" class="dao.impl.HeadphonesDAOImpl">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

<!--Декларация бинов для DAO-->

<!-- Интерцепторы sessionFactory. Решение проблем с LazyLoading...-->

    <bean id="hibernateInterceptor"
     class="org.springframework.orm.hibernate3.HibernateInterceptor">

        <property name="sessionFactory">
            <ref bean="sessionFactory"/>
        </property>

    </bean>


    <bean id="ValueDAO" class="org.springframework.aop.framework.ProxyFactoryBean">

        <property name="target">
            <ref bean="ValueDAOTemp" />
        </property>

        <property name="proxyInterfaces">
            <value>dao.ValueDAO</value>
        </property>

        <property name="interceptorNames">
            <list>
                <value>hibernateInterceptor</value>
            </list>
        </property>

    </bean>

    <bean id="AttributeDAO" class="org.springframework.aop.framework.ProxyFactoryBean">

        <property name="target">
            <ref bean="AttributeDAOTemp" />
        </property>

        <property name="proxyInterfaces">
            <value>dao.AttributeDAO</value>
        </property>

        <property name="interceptorNames">
            <list>
                <value>hibernateInterceptor</value>
            </list>
        </property>

    </bean>

    <bean id="ProductTypeDAO" class="org.springframework.aop.framework.ProxyFactoryBean">

        <property name="target">
            <ref bean="ProductTypeDAOTemp" />
        </property>

        <property name="proxyInterfaces">
            <value>dao.ProductTypeDAO</value>
        </property>

        <property name="interceptorNames">
            <list>
                <value>hibernateInterceptor</value>
            </list>
        </property>

    </bean>

    <bean id="SoftDAO" class="org.springframework.aop.framework.ProxyFactoryBean">

        <property name="target">
            <ref bean="SoftDAOTemp" />
        </property>

        <property name="proxyInterfaces">
            <value>dao.SoftDAO</value>
        </property>

        <property name="interceptorNames">
            <list>
                <value>hibernateInterceptor</value>
            </list>
        </property>

    </bean>

    <bean id="HeadphonesDAO" class="org.springframework.aop.framework.ProxyFactoryBean">

        <property name="target">
            <ref bean="HeadphonesDAOTemp" />
        </property>

        <property name="proxyInterfaces">
            <value>dao.HeadphonesDAO</value>
        </property>

        <property name="interceptorNames">
            <list>
                <value>hibernateInterceptor</value>
            </list>
        </property>

    </bean>

<!--Интерцепторы sessionFactory. Решение проблем с LazyLoading... Конец.-->

</beans>
